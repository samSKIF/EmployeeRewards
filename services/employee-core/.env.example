# Employee Core Service Environment Variables

# Service Configuration
EMPLOYEE_CORE_PORT=3001
NODE_ENV=development

# Database Configuration (separate database for microservice)
EMPLOYEE_CORE_DB_URL=postgresql://user:password@localhost:5432/employee_core_db
# Fallback to main database if not configured
# DATABASE_URL=postgresql://user:password@localhost:5432/thriviohr

# JWT Configuration
JWT_SECRET=employee-core-secret-key-change-in-production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Service Discovery
SERVICE_REGISTRY_URL=http://localhost:3000/services
API_GATEWAY_URL=http://localhost:3000

# Event Bus Configuration
EVENT_BUS_URL=http://localhost:3000/events

# Security
SALT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json