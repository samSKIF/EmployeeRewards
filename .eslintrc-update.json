{
  "extends": ["./.eslintrc.json"],
  "rules": {
    "max-lines": ["error", {
      "max": 200,
      "skipBlankLines": true,
      "skipComments": true
    }],
    "max-lines-per-function": ["warn", {
      "max": 50,
      "skipBlankLines": true,
      "skipComments": true
    }],
    "complexity": ["warn", 10],
    "max-params": ["warn", 4],
    "max-depth": ["warn", 4],
    "max-nested-callbacks": ["warn", 3]
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.test.tsx"],
      "rules": {
        "max-lines": ["error", 300],
        "max-lines-per-function": ["warn", 100]
      }
    }
  ]
}